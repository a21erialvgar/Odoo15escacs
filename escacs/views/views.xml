<odoo>
    <data>
        <!-- explicit list view definition -->


        <!--VISTES DE TORNEIGS-->
        <record model="ir.ui.view" id="detectius.torneigs_list_view">
            <field name="name">escacs.torneigs.view.tree</field>
            <field name="model">escacs.torneigs</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nomTorneig"/>
                    <field name="Ciutat"/>
                    <field name="dataIni"/>
                    <field name="dataFi"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="escacs.torneigs_form_view_id">
            <field name="name">escacs.torneigs.view.form</field>
            <field name="model">escacs.torneigs</field>
            <field name="arch" type="xml">
                <form string="Torneigs">
                    <sheet>

                        <separator string="Nom del torneig" style="font-size: 20px"/>

                        <group>
                            <group>
                                <field name="nomTorneig"/>
                            </group>

                            <group>
                                <field name="Ciutat"/>
                            </group>

                            <group>
                                <field name="dataIni"/>
                            </group>

                            <group>
                                <field name="dataFi"/>
                            </group>

                        </group>

                    </sheet>
                </form>
            </field>
        </record>


        <!--VISTAS DE PARTIDES-->
        <record model="ir.ui.view" id="esacacs.partides_list_view">
            <field name="name">escacs.partides.view.tree</field>
            <field name="model">esaccs.partides</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nomBlanques"/>
                    <field name="nomNegres"/>
                    <field name="resultat"/>
                    <field name="numJugades"/>
                    <field name="notacio"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="escacs.partides_form_view_id">
            <field name="name">escacs.partides.view.form</field>
            <field name="model">escacs.partides</field>
            <field name="arch" type="xml">
                <form string="Partides Escacs">
                    <sheet>

                        <separator string="Partides d'escacs" style="font-size: 20px"/>

                        <group>
                            <group>
                                <field name="nomBlanques"/>
                            </group>

                              <group>
                                <field name="nomNegres"/>
                            </group>

                             <group>
                                <field name="ressultat"/>
                            </group>

                            <group>
                                <field name="numJugades"/>
                            </group>

                            <group>
                                <field name="notacio"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!--VISTAS DE JUGADORS-->
        <record model="ir.ui.view" id="escacs.jugadors_list_view">
            <field name="name">escacs.jugadors.view.tree</field>
            <field name="model">escacs.jugadors</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nomJugador"/>
                    <field name="eloFIDE"/>
                    <field name="datanaixement"/>
                    <field name="numPartides"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="escacs.jugadors_form_view_id">
            <field name="name">escacs.jugadors.view.form</field>
            <field name="model">escacs.jugadors</field>
            <field name="arch" type="xml">
                <form string="JUgadors d'escacs">
                    <sheet>

                         <separator string="Nom Jugador" style="font-size: 20px"/>

                        <group>
                            <group>
                                <field name="eloFIDE"/>
                            </group>

                            <group>
                                <field name="datanaixement"/>
                            </group>

                             <group>
                                <field name="numPartides"/>
                            </group>
                        </group>


                    </sheet>
                </form>
            </field>
        </record>

        <!--DEFINICIO ACCIONS DE MENU-->
        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="detectius.informe_action_window">
            <field name="name">Informes</field>
            <field name="res_model">detectius.informe</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="detectius.investigat_action_window">
            <field name="name">Investigats</field>
            <field name="res_model">detectius.investigat</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="detectius.judici_action_window">
            <field name="name">Judicis</field>
            <field name="res_model">detectius.judici</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!--DEFINICIO MENÃšS-->
        <!-- Top menu item -->
        <menuitem name="ChessERP" id="escacs.menu_root"/>
        <!-- menu categories -->
        <menuitem name="Torneigs" id="escacs.torenigs_menu" parent="escacs.menu_root"
                  action="detectius.torneigs_action_window"/>
        <menuitem name="Judicis" id="detectius.judici_menu" parent="escacs.menu_root"
                  action="detectius.jugadors_action_window"/>
        <menuitem name="Investigats" id="detectius.investigat_menu" parent="escacs.menu_root"
                  action="detectius.partides_action_window"/>


    </data>
</odoo>